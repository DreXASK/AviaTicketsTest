<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_musician"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/shape_round_rectangle_16dp"
        android:outlineProvider="background"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/tv_town"
        style="@style/text_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Будапешт" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/text_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        app:drawableLeftCompat="@drawable/ic_plane"
        app:drawableTint="@color/grey_6"
        tools:text="от 22 264 ₽" />


</LinearLayout>